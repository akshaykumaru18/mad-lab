<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call and Save Application"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:id="@+id/phNo"

            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/del"
            android:onClick="delete"
            android:text="del"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/one"
            android:onClick="number"
            android:text="1"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/two"
            android:onClick="number"
            android:text="2"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/three"
            android:onClick="number"
            android:text="3"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/four"
            android:onClick="number"
            android:text="4"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/five"
            android:onClick="number"
            android:text="5"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/six"
            android:onClick="number"
            android:text="6"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/seven"
            android:onClick="number"
            android:text="7"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/eight"
            android:onClick="number"
            android:text="8"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/nine"
            android:onClick="number"
            android:text="9"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/star"
            android:onClick="number"
            android:text="*"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/zero"
            android:onClick="number"
            android:text="0"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/ash"
            android:onClick="number"
            android:text="#"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/call"
            android:onClick="call"
            android:text="Call"
            android:layout_margin="1dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/save"
            android:onClick="save"
            android:text="Save"
            android:layout_margin="1dp"
            />

    </LinearLayout>
</LinearLayout>